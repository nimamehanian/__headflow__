.tree-container
  position relative
  top 60px
  background $ivory
  margin 0px 4px 24px 4px
  box-shadow rgba(0, 0, 0, 0.15) 0px 1px 6px,
    rgba(0, 0, 0, 0.15) 0px 1px 4px
  border-radius 3px
  -webkit-border-radius 3px
  .tree
    color $storm
    background $ivory
    margin 0px 0px 0px 12px
    padding 24px 0px
    font-family 'Lato Regular'
    border-radius 3px
    -webkit-border-radius 3px

.embolden
  font-family 'Lato Bold'

.italicize
  font-family 'Lato Italic'

.embolden .italicize, .italicize .embolden
  font-family 'Lato Bold Italic'

.underline
  text-decoration underline

.strikethrough
  text-decoration line-through
  color $dust

.fade
  color $dust
