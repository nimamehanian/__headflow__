.sidebar
  width 240px
  position fixed
  top 48px
  left 0px
  bottom 0px
  background $bg
  padding 12px 0px 0px 0px
  {noSelect}
  .selected-context
    position absolute
    z-index -1
    height 24px
    width 96%
    margin-left 6px
    background #f5f5f7
    border-radius 3px
    box-shadow 0px 2px 4px rgba(50, 50, 93, 0.1)
  .contexts
    font-family 'Lato Regular'
    font-size 14px
    line-height 1.62
    li
      cursor pointer
      margin-left 26px
      padding 2px 0px 2px 8px
      transition color 1.0s cubic-bezier(0.165, 0.84, 0.44, 1)
      truncate(200px)
      &:before
        content ""
        position absolute
        left 0px
        transform translate(12px, 1px)
        width 14px
        height 18px
        background url(../images/doc.svg)
      &:hover
        color rgba($storm, 1)
